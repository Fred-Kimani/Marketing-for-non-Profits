<!DOCTYPE html>
<html>
<head>
<title>Pledge Support</title>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="../public/styles/organization_register.css">
</head>
<body>
<form action="/pledge/:_id" method="post" name="form1" id="add-form"
enctype="multipart/form-data"> 
<%- include ("./partials/messages") %>

<div class="form-group">
    <label for="items">Items to pledge:</label>
        <input type="checkbox" id="foodstuff" name="foodstuff" value="Food Stuff" class="pledged">
        <label for="foodstuff">Food stuff</label><br>
        <input type="checkbox" id="toiletry" name="toiletry" value="Toiletry" class="pledged">
        <label for="toiletry">Toiletry</label><br>
        <input type="checkbox" id="clothes" name="clothes" value="Clothes" class="pledged">
        <label for="clothes"> Clothes</label><br><br>
        <input type="checkbox" id="house" name="house" value="House utilities" class="pledged">
        <label for="house"> Other house utilities</label><br><br>

</div>  

<script>
document.querySelectorAll('input[type="checkbox"]:checked')
const ul = document.querySelector('ul')
let selected = [];

ul.addEventListener('change', event => {
  if (event.target.type === 'checkbox') {
    const items = document.querySelectorAll('input[type="checkbox"]:checked')
    selected = Array.from(items).map(x => x.value)
  }
})

</script>

<div class="form-group">
<label for="collection">How will items be collected?:</label>
  <select name="collection" id="collection">
    <option value="Pick-up">Pick up</option>
    <option value="Drop-off">Drop off</option>
    <option value="Delivery">Delivery</option>
  </select>
</div>

<script>
    var select = document.getElementById("collection");
    var text2 = select.options[select.selectedIndex].text2;
    console.log(text2);
</script>

<div class="form-group" id="phoneNumber">
    <label for="phone">Phone number</label>
    <input type="tel" name="phoneNumber" class="form-control" id="phoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}-[0-9]{3}" placeholder="07.........." value="">
    <br><br>
  <small>Format(starting with country code): 254-712-345-678</small><br><br>
    </div>



<div class="form-group" id="description">
  <label for="exampleInputEmail1">Description</label>
  <input type="name" name="description" class="form-control" id="description" aria-describedby="emailHelp" placeholder="Description of your organization" value="">
  </div>


<input type="submit" class="btn btn-primary" value="Pledge">
</form> 
</body>
</html>