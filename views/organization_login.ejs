<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Organization Login</h1>
        <%- include ("./partials/messages") %>
        <form action="/organization_login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No organization Account? <a href="/organization_register">Register as an Organization</a>
        </p>
      <p class="lead mt-4">
        Not an organization? ><a href="/login" >Login as a user</a></p>
      </div>
    </div>
  </div>