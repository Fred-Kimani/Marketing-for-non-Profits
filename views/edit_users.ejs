<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Update User Details ( <%=user.l_name%>,
        <%=user.f_name%> )
      </h1>
      <%- include ("./partials/messages") %>
      <form action="/update/<%=user._id%>" method="POST" id="add-form" 
        enctype="multipart/form-data">
        <div class="form-group">
          <label for="f_name">First Name</label>
          <input type="f_name" id="f_name" name="f_name" class="form-control"
          value="<%= user.f_name%>" />
        </div>
        <div class="form-group">
          <label for="l_name">Last Name</label>
          <input type="l_name" id="l_name" name="l_name" class="form-control"
          value="<%= user.l_name%>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            value="<%= user.email %>"
          />
        </div>
        <div class="form-group">
          <label for="image">Edit Image</label>
          <input
            type="file"
            name="image"
            class="form-control"/>
           <img src="/<%= user.image %>"
            width="100" class="img-thumbnail mt-1"
          />
        </div>
        <input type="hidden" name="old_image" value="<%=user.image%>" /> 

        <button type="submit" class="btn btn-primary btn-block">
          Update Details
        </button>
      </form>
    </div>
  </div>
</div>
