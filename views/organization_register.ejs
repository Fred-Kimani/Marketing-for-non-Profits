<!DOCTYPE html>
<html>
<head>
<title>Register your organization</title>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="../public/styles/organization_register.css">
</head>
<body>
<form action="/organization_register" method="post" name="form1" id="add-form"
enctype="multipart/form-data"> 
<%- include ("./partials/messages") %>

<div class="form-group">
  <label for="exampleInputEmail1">Organization name:</label>
  <input type="name" name="organization_name" class="form-control" id="org_name" aria-describedby="nameHelp" placeholder="Enter organization name" value="">
  </div>   

<div class="form-group">
<label for="exampleInputEmail1">Email</label>
<input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter organization email" value="">
</div>

<div class="form-group">
<label for="category">Choose a category:</label>
  <select name="category" id="category">
    <option value="Child Care">Child care</option>
    <option value="Health Care">Health care</option>
    <option value="Disabled">Disabled</option>
    <option value="Elderly Care">Elderly care</option>
    <option value="Relief">Relief</option>
    <option value="Other">other</option>
  </select>
</div>

<script>
    var select = document.getElementById("category");
    var text = select.options[select.selectedIndex].text;
    console.log(text);
</script>

<div class="form-group">
  <label for="image">Add Profile Image</label>
  <input
    type="file"
    id="image"
    name="image"
    class="form-control"
    value="<%= typeof image != 'undefined' ? image : '' %>"
  />
</div>

<div class="form-group" id="description">
  <label for="exampleInputEmail1">Description</label>
  <input type="name" name="description" class="form-control" id="description" aria-describedby="emailHelp" placeholder="Description of your organization" value="">
  </div>




<div class="form-group">
<label for="exampleInputEmail1">Password</label>
<input type="password" name="password" class="form-control" id="password" aria-describedby="emailHelp" placeholder="*********" value="">
</div>

<div class="form-group">
  <label for="exampleInputEmail1">Confirm password</label>
  <input type="password" name="password2" class="form-control" id="password2" aria-describedby="emailHelp" placeholder="*********" value="">
  </div>

<input type="submit" class="btn btn-primary" value="Register">
</form> 
</body>
</html>